{
  "name": "rodemirror",
  "version": "0.0.0-development",
  "type": "module",
  "description": "React component for CodeMirror 6",
  "repository": {
    "type": "git",
    "url": "https://github.com/sachinraja/rodemirror.git"
  },
  "homepage": "https://github.com/sachinraja/rodemirror#readme",
  "bugs": {
    "url": "https://github.com/sachinraja/rodemirror/issues"
  },
  "author": "Sachin Raja <sachinraja2349@gmail.com>",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "keywords": [
    "react",
    "codemirror",
    "codemirror.next",
    "6",
    "code",
    "editor"
  ],
  "scripts": {
    "build": "pnpm clean && tsup",
    "clean": "rimraf dist",
    "format": "prettier -w .",
    "lint": "run-p lint:*",
    "lint:format": "prettier -c .",
    "lint:types": "tsc",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "semantic-release": "semantic-release",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "peerDependencies": {
    "@codemirror/state": ">=0.18.0",
    "@codemirror/view": ">=0.18.0",
    "react": "^16 || ^17"
  },
  "devDependencies": {
    "@codemirror/state": "0.19.5",
    "@codemirror/view": "0.19.19",
    "@swc/core": "1.2.110",
    "@swc/jest": "0.2.11",
    "@testing-library/jest-dom": "5.15.0",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.3",
    "@types/react": "17.0.35",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "12.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.11.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "regenerator-runtime": "0.13.9",
    "rimraf": "3.0.2",
    "semantic-release": "18.0.0",
    "tsup": "5.7.4",
    "typescript": "4.5.2"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,tsx,md,json,yml}": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "./node_modules/prettier-plugin-pkg"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "tsup": {
    "entryPoints": [
      "src/index.tsx"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true,
    "inject": [
      "./react-import.js"
    ]
  }
}
