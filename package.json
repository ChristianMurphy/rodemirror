{
  "name": "rodemirror",
  "version": "0.0.0-development",
  "type": "module",
  "description": "React component for CodeMirror 6",
  "repository": {
    "type": "git",
    "url": "https://github.com/sachinraja/rodemirror.git"
  },
  "homepage": "https://github.com/sachinraja/rodemirror#readme",
  "bugs": {
    "url": "https://github.com/sachinraja/rodemirror/issues"
  },
  "author": "Sachin Raja <sachinraja2349@gmail.com>",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "keywords": [
    "react",
    "codemirror",
    "codemirror.next",
    "6",
    "code",
    "editor"
  ],
  "scripts": {
    "build": "tsup",
    "format": "dprint fmt",
    "lint": "run-p lint:*",
    "lint:format": "dprint check",
    "lint:types": "tsc",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "semantic-release": "semantic-release",
    "test": "vitest"
  },
  "peerDependencies": {
    "@codemirror/state": ">=0.18.0",
    "@codemirror/view": ">=0.18.0",
    "react": "^16 || ^17"
  },
  "devDependencies": {
    "@codemirror/state": "0.19.9",
    "@codemirror/view": "0.19.47",
    "@testing-library/jest-dom": "5.16.3",
    "@testing-library/react": "12.1.4",
    "@types/react": "17.0.43",
    "@vitejs/plugin-react": "1.2.0",
    "dprint": "0.24.1",
    "husky": "7.0.4",
    "jsdom": "19.0.0",
    "nano-staged": "0.6.0",
    "npm-run-all": "4.1.5",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "semantic-release": "19.0.2",
    "tsup": "5.12.1",
    "typescript": "4.6.3",
    "vite": "2.8.6",
    "vitest": "0.8.0"
  },
  "sideEffects": false,
  "nano-staged": {
    "*.{js,ts,tsx,md,json,yml}": "dprint fmt"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "tsup": {
    "entryPoints": [
      "src/index.tsx"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true,
    "inject": [
      "./react-import.js"
    ],
    "clean": true
  }
}
