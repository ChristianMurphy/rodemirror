{
  "name": "rodemirror",
  "version": "0.0.0-development",
  "type": "module",
  "description": "React component for CodeMirror 6",
  "repository": {
    "type": "git",
    "url": "https://github.com/sachinraja/rodemirror.git"
  },
  "homepage": "https://github.com/sachinraja/rodemirror#readme",
  "bugs": {
    "url": "https://github.com/sachinraja/rodemirror/issues"
  },
  "author": "Sachin Raja <sachinraja2349@gmail.com>",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "keywords": [
    "react",
    "codemirror",
    "codemirror.next",
    "6",
    "code",
    "editor"
  ],
  "scripts": {
    "build": "tsup",
    "format": "dprint fmt",
    "lint": "run-p lint:*",
    "lint:format": "dprint check",
    "lint:types": "tsc",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "semantic-release": "semantic-release",
    "test": "vitest"
  },
  "peerDependencies": {
    "@codemirror/state": "^6",
    "@codemirror/view": "^6",
    "react": "^16 || ^17 || ^18"
  },
  "devDependencies": {
    "@codemirror/state": "6.0.0",
    "@codemirror/view": "6.0.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@types/react": "18.0.12",
    "@vitejs/plugin-react": "1.3.2",
    "dprint": "0.29.1",
    "husky": "8.0.1",
    "jsdom": "19.0.0",
    "nano-staged": "0.8.0",
    "npm-run-all": "4.1.5",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "semantic-release": "19.0.3",
    "tsup": "6.1.2",
    "typescript": "4.7.3",
    "vite": "2.9.12",
    "vitest": "0.14.2"
  },
  "sideEffects": false,
  "nano-staged": {
    "*.{js,ts,tsx,md,json,yml}": "dprint fmt"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "tsup": {
    "entryPoints": [
      "src/index.tsx"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true,
    "inject": [
      "./react-import.js"
    ],
    "clean": true
  }
}
